  <%= form.text_field :email, class:"form-control", placeholder:"Email"  %>
</div>

<br/>

<div class="field form-group">
  <%= form.number_field :age, class:"form-control", placeholder:"Age"  %>
</div>

<br/>

<div class="field form-group">
  <%= form.number_field :user_id, id: :friend_tables_user_id, class:"form-control", value: current_user.id, type:'hidden'  %>
